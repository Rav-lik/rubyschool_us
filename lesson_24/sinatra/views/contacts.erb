<form action="/contacts" method="post" class="form-horizontal">
  <div class="form-group">
    <label for="email" class="col-sm-2 control-label">Your email:</label>
    <div class="col-sm-10">
      <input name="email" type="email" value="<%= params[:email] %>" class="form-control" placeholder="Your email">
    </div>
  </div>

  <div class="form-group">
    <label for="exampleFormControlTextarea1">Feedback:</label>
    <textarea class="form-control" name="feedback" id="exampleFormControlTextarea1" rows="3"></textarea>
  </div>

  <button type="submit" class="btn btn-primary">Send feedback</button>
</form>